{#
  Generates the getter function for the variable.

  @param variable VariableSymbol that captures the variable from the model
  @result C++ function
#}

{%- if variable.is_function() and not variable.contains_sum_call() %}
  inline {{declarations.printVariableType(variable)}} {{names.getter(variable)}}() const {
    {%- set simpleExpression = odeTransformer.replace_sum_calls(variable.get_declaring_expression()) %}
    return {{printer.printExpression(simpleExpression)}};
  }
{% else %}
  inline {{declarations.printVariableType(variable)}} {{names.getter(variable)}}() const {
    return {{printer.printOrigin(variable)}}{{names.name(variable)}};
  }
  inline void {{names.setter(variable)}}(const {{declarations.printVariableType(variable)}} __v) {
    {{printer.printOrigin(variable)}}{{names.name(variable)}} = __v;
  }
{% endif %}