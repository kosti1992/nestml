{#
  Generates C++ declaration
  @grammar:   IF_Stmt = IF_Clause
                        ELIF_Clause*
                        (ELSE_Clause)?
                        BLOCK_CLOSE;
                        IF_Clause = "if" Expr BLOCK_OPEN Block;
                        ELIF_Clause = "elif" Expr BLOCK_OPEN Block;

  @param ast ASTIfStmt
#}
if ({{printer.printExpression(ast.getIfClause().get_condition())}}) {
{%- with ast = ast.getIfClause().get_block() -%}
{%- include "Block.jinja2" -%}
{%- endwith -%}
{%- for elif in ast.getElifClauses() -%}
}else if({{printer.printExpression(elif.get_condition())}}) {
{%- with ast = elif.get_block() -%}
{%- include "Block.jinja2" -%}
{%- endwith -%}
{%- endfor -%}
{%- if ast.hasElseClause() %}
} else { {%- with ast = ast.getElseClause().get_block() -%}
{%- include "Block.jinja2" -%}
{%- endwith -%}
{%- endif -%}
} /* if end */

